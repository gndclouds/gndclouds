  <div id="All" class="tabcontent">
  <p>All projects are a mix of research, design, and development.</p>
  <br  />
    {% set postslist = collections.projects %}
    {% for project in postslist | reverse %}
     <article class="">
       <a class="db pv4 ph3 ph0-l no-underline black " href="{{project.data.url }}">
         <div class="flex flex-column flex-row-ns">

           <div class="db v-mid pr3-ns mb4 mb0-ns w-100 w-40-ns">
             <img src="{{project.data.hero }}" alt=" terminal.">
           </div>

           <div class="db v-mid w-100 w-60-ns pl3-ns">
             <h1>{{project.data.title }}</h1>
             <p class="">
              {{project.data.description }}
             </p>
           </div>

         </div>
       </a>
     </article>
    {% endfor %}
  </div>

