---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="center w-100 pa3" style="margin-top: 20vh;">
  <header class="fl w-100" style="margin-bottom: 10vh;">
    <img class="fl w-100 w-50-ns" src="{{ hero }}" alt="Hero image for {{title}}"/>
    <div class="fr w-100 w-50-ns">
      <h1 class="">{{ title }}</h1>
      <p class="">{{ description }}</p>
      <time class=""> {{date | displayDateYearMonthDay }}
      </time>
    </div>
  </header>
  <br  />

<section class="fl w-100">{{ content | safe }}</section>
</article>
