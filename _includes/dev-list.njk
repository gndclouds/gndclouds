<div class="list">
{% for post in postslist | reverse %}
  <div class="ba postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
  <img src="{{ post.data.hero }}" />

    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}<h3>{{ post.data.title }}</h3>{% else %}<code>{{ post.url }}</code>{% endif %}</a>

    [{{ post.data.project }}]
    {{post.data.body}}
    {{ post.data.content | safe }}
    {{ post.content | safe }}

{{ content | safe }}

  </div>

{% endfor %}
</div>

