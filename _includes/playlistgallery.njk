<div class="postlist">
{% for post in postslist | reverse %}
  <div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">
      <h2>{{ post.data.title }}</h2>
      <p>{{ post.data.description }}</p>
    </a>
  </div>
{% endfor %}
</div>
